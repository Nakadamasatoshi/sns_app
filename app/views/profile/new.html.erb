<div class="container">
  <div class="row">
    <div class="col-md-8 mx-auto post-form-container">
      <h2 class="h2">ユーザー情報</h2>
      <%= form_with(url: create_profile_path, model: @profile, local: true, method: :post, html: { class: 'post-form' } ) do |f| %>

         <!-- バリデーションエラーメッセージ表示を追加しています -->
        <% if @profile.errors.any? %>
          <ul>
            <% @profile.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %> </ul>
        <% end %>
      <!-- ここまで -->
        <div class="form-group">
          <%= f.label "名前", class: 'form-label' %>
          <%= f.text_field :name, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label "住所", class: 'form-label' %>
          <%= f.text_field :address, class: 'form-control' %>
        </div>
        
        <div class="form-group">
          <%= f.label "年齢", class: 'form-label' %>
          <%= f.text_field :age, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label "性別", class: 'form-label' %>
          <%= f.text_field :sex, class: 'form-control' %>
        </div>


        <div class="form-group image-upload">
          <%= f.label "イメージ画像", class: 'form-label' %>
          <div class="image-preview" id="imagePreview">
            <img src="" alt="Image Preview" class="image-preview__image">
            <span class="image-preview__default-text">Image will be displayed here</span>
          </div>
          <%= f.file_field :image, class: 'form-control-file', id: 'imageUpload' %>
        </div>

        <div class="button-group">
          <%= f.submit '登録', class: 'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>