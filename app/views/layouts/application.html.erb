    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link rel="stylesheet" href="<%= mix('/css/app.css') %>">
    <scrupt src="<%= mix('/js/bootstrap.js') %>"></scrupt>
  </head>

  <body>
    <div class="main-container"
     <nav class="custom-navbar"></nav>
      <div id="menuToggle">
        <input type="checkbox" />
        <span></span>
        <span></span>
        <span></span>
